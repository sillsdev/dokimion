/var/log/mongodb/*.log {
        daily
        missingok
        rotate 52
        compress
        delaycompress
        notifempty
        create 640 mongod mongod
        sharedscripts
        postrotate
                if [ -f /run/mongod/mongod2.pid ]; then
                        kill -USR1 `cat /run/mongod/mongod2.pid`
                fi
        endscript
}

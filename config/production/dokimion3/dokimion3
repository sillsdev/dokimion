/var/log/dokimion/dokimon_server_3.log {
        daily
        missingok
        rotate 52
        compress
        delaycompress
        notifempty
        create 640 dokimion dokimion
        sharedscripts
        postrotate
                if [ -f /run/dokimion/dokimion_server_3.pid ]; then
                        kill -USR1 `cat /run/dokimion/dokimion_server_3.pid`
                fi
        endscript
}

